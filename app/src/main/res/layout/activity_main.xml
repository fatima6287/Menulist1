<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p4"
    tools:context="com.example.fatima.menulist.MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/back_start"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_column="4"
            android:layout_row="0"
            android:background="#F5F5DC"
            android:text="Back"
            tools:layout_editor_absoluteX="800dp"
            tools:layout_editor_absoluteY="561dp"
            tools:text="Back" />
    </RelativeLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="20dp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362">

        <Button
            android:id="@+id/burger"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Burgers       >"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="305dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Pizza              >"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-9dp"
            tools:layout_editor_absoluteY="-75dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"

            android:text="Drinks           >"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="314dp"
            tools:layout_editor_absoluteY="292dp" />

        <Button
            android:id="@+id/sweet_menu"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Desserts      >"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="305dp"
            tools:layout_editor_absoluteY="113dp" />
    </GridLayout>



</RelativeLayout>
